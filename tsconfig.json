{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"es6"
		],
		"module": "commonjs",
		"noImplicitAny": false,
		"removeComments": true,
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"lib",
		"**/*.spec.ts"
	]
}
